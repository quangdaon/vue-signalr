{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src/"
  },
  "include": [
    "src/index.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
